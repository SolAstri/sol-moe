---
// Components/BlogPost.astro
const { post } = Astro.props;
---

<div class="bg-semi-transparent rounded-lg p-4">
  <div class="flex items-center gap-2 text-xs font-mono mb-2">
    <a
        href={`/blog?type=${post.type}`}
        class="text-main/60 hover:text-accent transition-colors"
    >
      {post.type}
    </a>
    <span class="text-main/40">â€¢</span>
    <time class="text-main/60">{post.date}</time>
  </div>
  <h3 class="font-medium leading-snug mb-2">
    <a
        href={`/blog/${post.slug}`}
        class="hover:text-accent transition-colors"
    >
      {post.title}
    </a>
  </h3>
  <p class="text-sm text-main/70 line-clamp-2">{post.excerpt}</p>
  <div class="mt-3 flex flex-wrap gap-2">
    {post.tags.map(tag => (
        <a
            href={`/tags/${tag}`}
            class="text-xs font-mono bg-accent/10 px-2 py-0.5 rounded-full text-accent/80 hover:bg-accent/20 transition-colors"
        >
          #{tag}
        </a>
    ))}
  </div>
</div>