---
interface TimelineEvent {
  date: string;
  title: string;
  description: string;
}

interface Props {
  events: TimelineEvent[];
}

const { events } = Astro.props;
---

<div class="relative pl-8 space-y-8">
  <div class="absolute top-0 left-3 h-full w-px bg-accent/20"></div>
  
  {events.map((event, index) => (
    <div class="relative">
      <div class="absolute -left-8 top-1.5 w-3 h-3 rounded-full border-2 border-accent bg-main-bg"></div>
      <div class="font-mono text-sm text-accent/80 mb-1">{event.date}</div>
      <h3 class="text-lg font-medium mb-2">{event.title}</h3>
      <p class="text-main/70">{event.description}</p>
    </div>
  ))}
</div>